<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pritshah.infotracker">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="controller.WelcomeScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="controller.HomeScreenActivity" />
        <activity android:name="controller.RegistrationScreenActivity" />
        <activity android:name="controller.EnterNoteActivity" />
        <activity android:name="controller.EditNoteActivity" />
        <activity android:name="controller.ItemClickedActivity" />
        <activity android:name="controller.DeleteNoteActivity" />
        <activity android:name="controller.AddTaskActivity" />
        <activity android:name="controller.ViewTaskActivity" />
        <activity android:name="controller.SplashActivity"></activity>
    </application>

</manifest>